<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.transportmainapp.PassengerActivity">

    <TextView
        android:id="@+id/headingTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TravelNow"
        android:textSize="60sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/headerdescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Amazing App for travel"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/headingTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/availabletrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:text="Available Trips"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerdescription" />

    <Button
        android:id="@+id/route1"
        android:layout_width="364dp"
        android:layout_height="62dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#FFFFFFFF"
        android:text="Kasarani - CBD"
        android:textAlignment="center"
        android:textColor="#1e1b21"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/availabletrips" />

    <Button
        android:id="@+id/route2"
        android:layout_width="364dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFFFF"
        android:text="Kiambu - CBD"
        android:textAlignment="center"
        android:textColor="#1e1b21"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route1" />

    <TextView
        android:id="@+id/route3"
        android:layout_width="364dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFFFF"
        android:text="Langata - CBD"
        android:textAlignment="center"
        android:textColor="#1e1b21"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route2"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/route4"
        android:layout_width="364dp"
        android:layout_height="62dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FFFFFFFF"
        android:text="Waiyaki Way - CBD"
        android:textAlignment="center"
        android:textColor="#1e1b21"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/route3" />

    <Button
        android:id="@+id/pass_back_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="120dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#b794f6"
        android:text="BACK"
        android:textColor="#1e1b21"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintLeft_toLeftOf="@id/route4"
        app:layout_constraintRight_toRightOf="@id/route4" />


</androidx.constraintlayout.widget.ConstraintLayout>